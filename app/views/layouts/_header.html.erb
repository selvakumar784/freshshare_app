<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Freshshare", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right navbar-nav">
          <li><%= link_to "Home", root_path %></li>
          <% if  signed_in? %>
            <li><%= link_to "Offer a ride", new_offerride_path %></li>
            <li><%= link_to "Join a ride", offerrides_search_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Your bookings", bookrides_path(current_user) %></li>
                <li><%= link_to "Your offers", offerrides_path(current_user) %></li>
                <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
